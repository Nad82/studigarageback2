{% extends 'base.html.twig' %}

{% block title %}Vehicules{% endblock %}

{% block body %}
    <h1>Vehicules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>imageFileName</th>
                <th>prix</th>
                <th>kilometrage</th>
                <th>annee</th>
                <th>equipements</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <td>{{vehicule.id}}</td>
                    <td><a href="{{ asset('uploads/' ~ vehicule.imageFilename) }}">View image</a></td>
                    <td>{{vehicule.prix}}</td>
                    <td>{{vehicule.kilometrage}}</td>
                    <td>{{vehicule.annee}}</td>
                    <td>{{vehicule.equipements}}</td>
                    <td>
                        <a href="{{path('vehicule_show', {'id': vehicule.id})}}">Details</a>
                        <a href="{{path('vehicule_edit', {'id': vehicule.id})}}">Modifier</a>
                        <a href="{{path('vehicule_delete', {'id': vehicule.id})}}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{path('vehicule_create')}}">Creer vehicule</a>

{% endblock %}

