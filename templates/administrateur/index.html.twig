{% extends 'base.html.twig' %}

{% block title %}Administrateur{% endblock %}

{% block body %}
    <h1>Administrateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope= 'col'>Id</th>
                <th scope= 'col'>Email</th>
                <th scope= 'col'>Password</th>
                <th scope= 'col'>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrateur in administrateurs %}
            <tr>
                <td>{{ administrateur.id }}</td>
                <td>{{ administrateur.email }}</td>
                <td>{{ administrateur.password }}</td>
                <td>
                    <a href="{{ path('administrateur_show', {'id': administrateur.id}) }}">Details</a>
                    <a href="{{ path('administrateur_edit', {'id': administrateur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('administrateur_new') }}">Nouvel administrateur</a>
{% endblock %}
