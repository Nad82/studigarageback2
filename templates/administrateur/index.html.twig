{% extends 'base.html.twig' %}

{% block title %}administrateur{% endblock %}

{% block body %}
<table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">email</th>
                <th scope="col">password</th>
            </tr>
        </thead>
        <tbody>
            {% for administrateur in administrateurs %}
            <tr>
                <td scope="row">{{administrateur.id}}</td>
                <td>{{administrateur.email}}</td>
                <td>
                    <a href="{{ path('administrateur_show', {'id': administrateur.id}) }}" class="btn btn-primary">Détails</a>
                    <a href="{{ path('administrateur_edit', {'id': administrateur.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('administrateur_delete', {'id': administrateur.id}) }}" class="btn btn-primary">Supprimer</a>
                </td>
                <td>{{administrateur.password}}</td>
                <td>
                    <a href="{{ path('administrateur_show', {'id': administrateur.id}) }}" class="btn btn-primary">Détails</a>
                    <a href="{{ path('administrateur_edit', {'id': administrateur.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('administrateur_delete', {'id': administrateur.id}) }}" class="btn btn-primary">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
<a href="{{ path('administrateur_create') }}" class="btn btn-primary">Ajouter un administateur</a>
{% endblock %}
