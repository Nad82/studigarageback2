{% extends 'base.html.twig' %}

{% block title %}Liste Vehicules{% endblock %}

{% block body %}
    <h1>Liste Vehicules</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>image</th>
                <th>prix</th>
                <th>kilometrage</th>
                <th>annee</th>
                <th>equipements</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <td>{{vehicule.id}}</td>
                    <td>
                        <img src= {{ asset('uploads/' ~ vehicule.image) }} width="200" height="200"/>
                    </td>
                    <td>{{vehicule.prix}}</td>
                    <td>{{vehicule.kilometrage}}</td>
                    <td>{{vehicule.annee}}</td>
                    <td>{{vehicule.equipements}}</td>
                    <td>
                        <a href="{{path('vehicule_show', {'id': vehicule.id})}}">Details</a>
                        
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

